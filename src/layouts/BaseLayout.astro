---
// data imports
import * as site from "../data/site.json";

const { title, logo, author, description } = site;

// component imports
import Meta from "../components/FileStart.astro";
import Scripts from "../components/FileEnd.astro";
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <Meta title={title} />
  </head>
  <body>
    <main>
        <section id="content">
        <Header />
            <slot />
        </section>
        <Sidebar />
    </main>
    <Scripts />
  </body>
</html>

<style>
    main {
        display: grid;
        grid-template-columns: 400px 1fr;
        grid-template-rows: auto 1fr;
        height: 100dvh
    }

    #content {
        background-color: var(--clr-light);
        grid-column: 2 / 4;
        grid-row: 1 / 3;
    
    }
    aside {
        grid-column: 1 / 2;
        grid-row: 1 / 3;
    }
</style>